# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI/LLM Configuration (OpenAI-compatible API)
# Works with OpenAI, SambaNova, LiteLLM proxy, or other OpenAI-compatible endpoints
AI_API_KEY=your-api-key-here
AI_MODEL=gpt-4-turbo-preview

# For custom endpoints (e.g., SambaNova at TACC, LiteLLM proxy):
# AI_API_BASE_URL=https://your-custom-endpoint.com/v1/

# Alternative: Use OPENAI_API_KEY (will be used as fallback if AI_API_KEY not set)
# OPENAI_API_KEY=sk-your-openai-key-here

# Database Configuration (for future use)
DATABASE_URL=postgresql://user:pass@localhost/dbname

# External API Configuration
ENA_API_BASE=https://www.ebi.ac.uk/ena/portal/api

# Application Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost
LOG_LEVEL=INFO
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60